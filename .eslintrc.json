{
    "env": {
        "node": true,
        "es2020": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "max-len": [2, 120, 2],
        "complexity": [
            "error",
            { "max": 4 }
        ]
    },
    "overrides": [
        {
            "files": [
                "**/*.spec.js"
            ],
            "env": {
                "jest": true
            }
        }
    ]
}
